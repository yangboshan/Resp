#import "PSAppDelegate.h"

#import "PSViewController.h"

@implementation PSAppDelegate

@synthesize window = _window;
@synthesize viewController = _viewController;

#define IS_IPAD (UI_USER_INTERFACE_IDIOM() == UIUserInterfaceIdiomPad)
#define IS_IPHONE (UI_USER_INTERFACE_IDIOM() == UIUserInterfaceIdiomPhone)
#define IS_IPHONE_5 (IS_IPHONE && [[UIScreen mainScreen] bounds].size.height == 568.0f)


- (BOOL)application:(UIApplication *)application didFinishLaunchingWithOptions:(NSDictionary *)launchOptions
{
    self.window = [[UIWindow alloc] initWithFrame:[[UIScreen mainScreen] bounds]];
    // Override point for customization after application launch.
    
    float height = [[UIScreen mainScreen] bounds].size.height;
    
    if(IS_IPHONE && height == 568.0f)
    {
        self.viewController = [[PSViewController alloc] initWithNibName:@"View1" bundle:nil];
    }
    else if(IS_IPHONE)
    {
        self.viewController = [[PSViewController alloc] initWithNibName:@"View2" bundle:nil];
    }
    
	
//    self.viewController = [[PSViewController alloc] init];
	self.window.rootViewController = self.viewController;
    [self.window makeKeyAndVisible];
    return YES;
}

